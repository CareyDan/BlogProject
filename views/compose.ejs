<%- include("partials/header") -%>

<h1>Compose</h1>

<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="title">Title</label>
    <input id="title" class="form-control" type="text" name="postTitle" placeholder="Enter Title" autofocus required>

    <label for="content">Post</label>
    <textarea id="content" class="form-control" rows="5" name="postBody" placeholder="Enter Comments" required></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="publish">Publish</button>
</form>

<%- include("partials/footer") -%>
